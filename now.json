{
  "name": "bodgingbear.dev",
  "version": 2,
  "alias": ["bodgingbear.dev"],
  "builds": [
    { "src": "frontend/next.config.js", "use": "@now/next" },
    { "src": "backend/routes/*.js", "use": "@now/node" }
  ],
  "env": {
    "TOKEN": "@bodgingbear.dev-gh_token"
  },
  "routes": [
    {
      "src": "/api/projects/?$",
      "dest": "backend/routxes/projects.js"
    },
    {
      "src": "/api/projects/(.+)$",
      "dest": "backend/routes/projectById.js?project=$1"
    },
    {
      "src": "/",
      "dest": "frontend/index"
    },
    {
      "src": "^/_next/(.*)",
      "dest": "frontend/_next/$1"
    },
    {
      "src": "/(.+)",
      "dest": "frontend/$1"
    }
  ]
}
